<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashscreen"
            android:layout_width="160dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:background="@drawable/logosplash" />

        <TextView
            android:id="@+id/splashtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5sp"
            android:text="YourNight"
            android:textColor="@color/mainBackgroundTmp3"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarCircle"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/mainBackgroundTmp3"
            android:paddingTop="10sp"
            android:progressBackgroundTint="@color/mainBackgroundTmp2"
            android:visibility="invisible" />

    </LinearLayout>
    </RelativeLayout>